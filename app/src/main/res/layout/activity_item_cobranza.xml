<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/white"
    android:elevation="2dp"
    android:layout_marginBottom="8dp">

    <!-- Mes y Estado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txtMesCobranza"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Octubre 2025"
            android:textSize="16sp"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/txtEstadoCobranza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pendiente"
            android:textSize="13sp"
            android:textColor="#D32F2F"/>
    </LinearLayout>

    <!-- Depto y Monto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/txtDeptoCobranza"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Depto 1203"
            android:textSize="13sp"
            android:textColor="#777777"/>

        <TextView
            android:id="@+id/txtMontoCobranza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$120.000"
            android:textSize="15sp"
            android:textColor="#00796B"/>
    </LinearLayout>

    <!-- Descripción -->
    <TextView
        android:id="@+id/txtDescripcionCobranza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gastos del mes (sueldos, mantenciones, luz, agua)"
        android:textSize="12sp"
        android:textColor="#888888"
        android:layout_marginTop="4dp"/>

    <!-- Botón Pagar -->
    <Button
        android:id="@+id/btnPagarCobranza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pagar ahora"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:layout_marginTop="8dp"/>
</LinearLayout>
