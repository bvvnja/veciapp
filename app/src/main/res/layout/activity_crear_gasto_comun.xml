<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".Crear_Gasto_Comun">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- CONTENEDOR DEL FORMULARIO -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/white">

            <!-- Título principal -->
            <TextView
                android:id="@+id/txtTituloGenerar"
                android:text="@string/txtTituloGenerar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:paddingTop="40dp"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <!-- Subtítulo suave -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Configura los gastos comunes del mes para todo el edificio."
                android:textSize="13sp"
                android:textColor="#888888"
                android:fontFamily="@font/worksans"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <!-- Label Mes -->
            <TextView
                android:id="@+id/txtLabelMes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtLabelMes"
                android:fontFamily="@font/worksans"
                android:textSize="15sp"
                android:textColor="#555555"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/icono_calendario"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"/>

            <!-- Spinner Mes -->
            <Spinner
                android:id="@+id/spinnerMes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:layout_marginTop="4dp"
                android:padding="8dp"
                android:background="@android:drawable/edit_text"/>

            <!-- Label Año -->
            <TextView
                android:id="@+id/txtLabelAnio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtLabelAnio"
                android:fontFamily="@font/worksans"
                android:textSize="15sp"
                android:textColor="#555555"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/icono_calendario"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"/>

            <!-- Año -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <EditText
                    android:id="@+id/EtAnio"
                    android:hint="@string/EtAnio"
                    android:inputType="number"
                    android:padding="14dp"
                    android:fontFamily="@font/worksans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Label Total gastos edificio -->
            <TextView
                android:id="@+id/txtLabelTotalEdificio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtLabelTotalEdificio"
                android:fontFamily="@font/worksans"
                android:textSize="15sp"
                android:textColor="#555555"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/gasto_comun_edificio"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"/>

            <!-- Total gastos edificio -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <EditText
                    android:id="@+id/EtTotalGastosEdificio"
                    android:hint="@string/EtTotalGastosEdificio"
                    android:inputType="numberDecimal"
                    android:padding="14dp"
                    android:fontFamily="@font/worksans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Label Descripción -->
            <TextView
                android:id="@+id/txtLabelDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtLabelDescripcion"
                android:fontFamily="@font/worksans"
                android:textSize="15sp"
                android:textColor="#555555"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/icono_descripcion"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"/>

            <!-- Descripción -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <EditText
                    android:id="@+id/EtDescripcion"
                    android:hint="@string/EtDescripcion"
                    android:inputType="textMultiLine"
                    android:gravity="top|start"
                    android:minLines="3"
                    android:padding="14dp"
                    android:fontFamily="@font/worksans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Resumen informativo -->
            <TextView
                android:id="@+id/txtResumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtResumen"
                android:fontFamily="@font/worksans"
                android:textSize="13sp"
                android:textColor="#777777"
                android:layout_marginTop="18dp"/>

            <!-- Botón generar -->
            <Button
                android:id="@+id/btnGenerarGastos"
                android:text="@string/btnGenerarGastos"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="@font/worksans"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>
