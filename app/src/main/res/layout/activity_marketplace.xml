<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_marketplace"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/txtTituloMarketplace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Marketplace Veciapp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="8dp" />

    <Button
        android:id="@+id/btnMisPublicaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver mis publicaciones"
        android:layout_gravity="end"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etBuscarNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Buscar por nombre"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etPrecioMin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:hint="Precio mín." />

        <EditText
            android:id="@+id/etPrecioMax"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:hint="Precio máx."
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnAplicarFiltros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplicar filtros"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPublicaciones"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="4dp" />

</LinearLayout>
