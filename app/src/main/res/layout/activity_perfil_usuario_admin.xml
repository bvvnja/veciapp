<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título principal -->
        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="40dp"
            android:layout_marginBottom="8dp"
            android:text="Mi perfil"
            android:textColor="#333333"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/worksans" />

        <!-- Subtítulo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:text="Ve o edita los datos de tu cuenta de administrador."
            android:textColor="#888888"
            android:textSize="13sp"
            android:fontFamily="@font/worksans" />

        <!-- Label Nombre -->
        <TextView
            android:id="@+id/txtLabelNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/icono_calendario"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="Nombres"
            android:textColor="#555555"
            android:textSize="15sp" />

        <!-- Nombre -->
        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombres y Apellidos"
            android:inputType="textPersonName"
            android:padding="14dp"
            android:fontFamily="@font/worksans" />

        <!-- Botón Guardar Nombre -->
        <Button
            android:id="@+id/btnSaveName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:text="Guardar nombre"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="@font/worksans" />

        <!-- Label Correo Electrónico -->
        <TextView
            android:id="@+id/txtLabelCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/icono_email"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="Correo Electrónico"
            android:textColor="#555555"
            android:textSize="15sp" />

        <!-- Correo (solo lectura) -->
        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:clickable="false"
            android:focusable="false"
            android:fontFamily="@font/worksans"
            android:hint="Correo Electrónico"
            android:inputType="textEmailAddress"
            android:padding="14dp"
            android:textColor="#888888" />

        <!-- Label Contraseña -->
        <TextView
            android:id="@+id/txtLabelContrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/icono_password"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="Contraseña"
            android:textColor="#555555"
            android:textSize="15sp" />

        <!-- Nueva contraseña -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:hintEnabled="false"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans"
                android:hint="Nueva contraseña"
                android:inputType="textPassword"
                android:padding="14dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Confirmar contraseña -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:hintEnabled="false"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordConfirmU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans"
                android:hint="Confirmar contraseña"
                android:inputType="textPassword"
                android:padding="14dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botón para actualizar la contraseña -->
        <Button
            android:id="@+id/btnSavePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:text="Guardar contraseña"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="@font/worksans" />

    </LinearLayout>
</ScrollView>
