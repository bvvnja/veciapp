<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:elevation="4dp"
    android:padding="16dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <!-- Título: Nombre del usuario -->
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del usuario"
            android:fontFamily="@font/worksans"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- Correo del usuario -->
        <TextView
            android:id="@+id/userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/worksans"
            android:text="Correo electrónico"
            android:textSize="16sp"
            android:textColor="#888"
            android:layout_marginTop="4dp" />

        <!-- Número del departamento -->
        <TextView
            android:id="@+id/userDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/worksans"
            android:text="Depto: 101"
            android:textSize="14sp"
            android:textColor="#555"
            android:layout_marginTop="8dp" />

        <!-- Mensaje de cuenta desactivada -->
        <TextView
            android:id="@+id/accountStatus"
            android:layout_width="wrap_content"
            android:fontFamily="@font/worksans"
            android:layout_height="wrap_content"
            android:text="Cuenta desactivada"
            android:textSize="14sp"
            android:textColor="#ff0000"
            android:visibility="gone"
            android:layout_marginTop="8dp" />

        <!-- Botones: Editar y Activar/Desactivar -->
        <LinearLayout
            android:orientation="horizontal"
            android:fontFamily="@font/worksans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <!-- Botón para editar -->
            <Button
                android:id="@+id/btnEditUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans"
                android:text="Editar"
                android:backgroundTint="@android:color/holo_blue_light"
                android:textColor="@android:color/white"
                android:padding="8dp" />

            <!-- Botón para activar/desactivar -->
            <Button
                android:id="@+id/btnToggleUserStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desactivar"
                android:backgroundTint="@color/red"
                android:fontFamily="@font/worksans"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp"
                android:padding="8dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
