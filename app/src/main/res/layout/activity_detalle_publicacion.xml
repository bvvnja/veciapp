<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_detalle_publicacion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgDetalleProducto"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <!-- Título principal -->
        <TextView
            android:id="@+id/txtDetalleTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título del producto"
            android:textStyle="bold"
            android:textSize="22sp"
            android:paddingTop="8dp" />

        <!-- Descripción -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/txtDetalleDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción completa del producto"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <!-- Información del producto -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Información del producto"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/txtDetalleCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categoría: ..."
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtDetalleEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado: ..."
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtDetalleUso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uso: ..."
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtDetalleContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teléfono y correo"
            android:textSize="15sp" />

        <!-- Precio -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="6dp" />

        <TextView
            android:id="@+id/txtDetallePrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$0"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@android:color/holo_green_dark"
            android:paddingBottom="8dp" />

        <!-- BOTONES DEL DUEÑO (ARRIBA DEL CHAT) -->
        <LinearLayout
            android:id="@+id/layoutBotonesDueno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingTop="8dp"
            android:visibility="gone">

            <!-- 1) Activar / Desactivar: se cambia el fondo en el Activity -->
            <Button
                android:id="@+id/btnDesactivarPublicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desactivar"
                android:textAllCaps="false"
                android:layout_marginStart="4dp"
                android:textColor="@android:color/white" />

            <!-- 2) Editar (gris) -->
            <Button
                android:id="@+id/btnEditarPublicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar"
                android:textAllCaps="false"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/black"
                android:background="@drawable/bg_btn_neutral" />

            <!-- 3) Eliminar (rojo) -->
            <Button
                android:id="@+id/btnEliminarPublicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                android:textAllCaps="false"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_btn_danger" />
        </LinearLayout>

        <!-- Botón para abrir el chat (ABAJO) -->
        <Button
            android:id="@+id/btnChatVendedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chatear con el vendedor"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_btn_primary"
            android:layout_marginTop="8dp" />

        <!-- Chat -->
        <LinearLayout
            android:id="@+id/layoutChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtTituloChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chat con el vendedor"
                android:textStyle="bold"
                android:textSize="16sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerChat"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:paddingTop="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etMensaje"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Escribe un mensaje" />

                <Button
                    android:id="@+id/btnEnviarMensaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enviar"
                    android:textAllCaps="false" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
