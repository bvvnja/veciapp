<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- Título principal -->
        <TextView
            android:id="@+id/txtTitulo"
            android:text="Mi Perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/worksans"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:paddingTop="40dp"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <!-- Subtítulo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ve o edita tu perfil."
            android:textSize="13sp"
            android:textColor="#888888"
            android:fontFamily="@font/worksans"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Label Nombre -->
        <TextView
            android:id="@+id/txtLabelNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombres"
            android:textSize="15sp"
            android:textColor="#555555"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/icono_calendario"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/EtNombre"
            android:hint="Nombres y Apellidos"
            android:inputType="text"
            android:padding="14dp"
            android:fontFamily="@font/worksans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Botón de Actualizar Nombre (aparece cuando se edita el nombre) -->
        <Button
            android:id="@+id/btnActualizarNombre"
            android:text="Actualizar Nombre"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:fontFamily="@font/worksans"
            android:backgroundTint="@android:color/holo_blue_light"
            android:layout_marginTop="10dp"/>

        <!-- Label Correo Electrónico (no editable) -->
        <TextView
            android:id="@+id/txtLabelCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo Electrónico"
            android:textSize="15sp"
            android:textColor="#555555"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/icono_email"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/EtCorreo"
            android:hint="Correo Electrónico"
            android:inputType="textEmailAddress"
            android:padding="14dp"
            android:fontFamily="@font/worksans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="false"/>

        <!-- Label Contraseña -->
        <TextView
            android:id="@+id/txtLabelContrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contraseña"
            android:textSize="15sp"
            android:textColor="#555555"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/icono_password"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true">


        <EditText
            android:id="@+id/EtContrasena"
            android:hint="Nueva Contraseña"
            android:inputType="textPassword"
            android:padding="14dp"
            android:fontFamily="@font/worksans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true">

        <!-- Confirmar Contraseña (inicialmente oculta) -->
        <EditText
            android:id="@+id/EtConfirmarContrasena"
            android:hint="Confirmar Contraseña"
            android:inputType="textPassword"
            android:padding="14dp"
            android:fontFamily="@font/worksans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botón para actualizar la contraseña -->
        <Button
            android:id="@+id/btnActualizarContrasena"
            android:text="Actualizar Contraseña"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:fontFamily="@font/worksans"
            android:visibility="gone"/>


    </LinearLayout>
</ScrollView>
